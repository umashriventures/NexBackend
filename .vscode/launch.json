        },
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "program": "run.py",
            "args": [
                "app"
            ],
            "env": {
                "FLASK_APP": "run",
                "FLASK_DEBUG": "1"
            },
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "app.celery_app.app",
                "worker",
                "--loglevel=info",
                "-P",
                "solo"
            ],
            "console": "integratedTerminal",
            "python": "/Users/ryanwalker277/github/nex-backend/.venv/bin/python",
            "justMyCode": true
        },
        {
            "name": "Python Debugger: e2e Tests",
